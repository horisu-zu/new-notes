<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/versionCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/upperLayout"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/showVersionNoteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/versionTitle"
                android:text="VersionTitle..."
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_toEndOf="@id/showVersionNoteButton"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/versionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="01/03/2024"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/versionNote"
            android:text="VersionNote..."
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:gravity="top"
            android:layout_marginBottom="15dp"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>
